---
import Layout from '../../layouts/Layout.astro';
import { requireAdmin } from '../../lib/auth/middleware';

const admin = await requireAdmin(Astro.cookies);
---

<Layout title="All Offers">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="mb-6 flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-900">All Offers</h1>
        <div class="space-x-4">
          <a
            href="/admin"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Dashboard
          </a>
          <a
            href="/offers/new"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            New Offer
          </a>
          <a
            href="/profile"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Profile
          </a>
          <a
            href="/logout"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Logout
          </a>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="mb-4 flex justify-between items-center">
          <h2 class="text-xl font-bold text-gray-900">All Offers</h2>
          <button
            id="refreshOffers"
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200"
          >
            Refresh
          </button>
        </div>

        <div id="offersList" class="space-y-3">
          <p class="text-gray-500 text-center py-4">Loading offers...</p>
        </div>

        <div id="pagination" class="mt-6 flex justify-center space-x-2">
          <!-- Pagination will be inserted here -->
        </div>
      </div>
    </div>
  </div>

  <script>
    let currentOffset = 0;
    const limit = 20;
    
    async function loadOffers(offset = 0) {
      try {
        const response = await fetch(`/api/admin/offers?limit=${limit}&offset=${offset}`);
        if (!response.ok) throw new Error('Failed to load offers');
        
        const data = await response.json();
        const offers = data.offers;
        const pagination = data.pagination;
        
        const offersList = document.getElementById('offersList')!;
        if (offers.length === 0) {
          offersList.innerHTML = '<p class="text-gray-500 text-center py-4">No offers found</p>';
          return;
        }
        
        offersList.innerHTML = offers.map((offer: any) => {
          const date = offer.createdAt
            ? new Date(offer.createdAt).toLocaleDateString()
            : 'Unknown';
          
          const total = new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: offer.currency || 'EUR',
          }).format(offer.totals?.total || 0);
          
          return `
            <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
              <div class="flex-1">
                <p class="font-medium text-gray-900">${offer.clientName}</p>
                <p class="text-sm text-gray-500">${offer.createdBy?.email || 'Unknown'} • ${date}</p>
                ${offer.companyName ? `<p class="text-xs text-gray-400">${offer.companyName}</p>` : ''}
              </div>
              <div class="text-right mr-4">
                <p class="font-semibold text-gray-900">${total}</p>
                <p class="text-xs text-gray-500">${offer.items?.length || 0} items</p>
              </div>
              <div>
                <a
                  href="/offers/${offer.id}"
                  class="px-4 py-2 text-sm font-medium text-indigo-600 bg-indigo-50 rounded-md hover:bg-indigo-100"
                >
                  View →
                </a>
              </div>
            </div>
          `;
        }).join('');
        
        // Render pagination
        const paginationDiv = document.getElementById('pagination')!;
        if (pagination.total > limit) {
          const totalPages = Math.ceil(pagination.total / limit);
          const currentPage = Math.floor(offset / limit) + 1;
          
          let paginationHTML = '';
          
          // Previous button
          if (currentPage > 1) {
            paginationHTML += `
              <button
                onclick="loadOffers(${offset - limit})"
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50"
              >
                Previous
              </button>
            `;
          }
          
          // Page numbers
          for (let i = 1; i <= totalPages; i++) {
            if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
              paginationHTML += `
                <button
                  onclick="loadOffers(${(i - 1) * limit})"
                  class="px-4 py-2 text-sm font-medium ${
                    i === currentPage
                      ? 'text-white bg-indigo-600'
                      : 'text-gray-700 bg-white border border-gray-300 hover:bg-gray-50'
                  } rounded-md"
                >
                  ${i}
                </button>
              `;
            } else if (i === currentPage - 2 || i === currentPage + 2) {
              paginationHTML += '<span class="px-2 text-gray-500">...</span>';
            }
          }
          
          // Next button
          if (currentPage < totalPages) {
            paginationHTML += `
              <button
                onclick="loadOffers(${offset + limit})"
                class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50"
              >
                Next
              </button>
            `;
          }
          
          paginationDiv.innerHTML = paginationHTML;
        } else {
          paginationDiv.innerHTML = '';
        }
        
        currentOffset = offset;
      } catch (error) {
        console.error('Error loading offers:', error);
        document.getElementById('offersList')!.innerHTML = 
          '<p class="text-red-500 text-center py-4">Failed to load offers</p>';
      }
    }
    
    // Make loadOffers available globally
    (window as any).loadOffers = loadOffers;
    
    document.getElementById('refreshOffers')?.addEventListener('click', () => loadOffers(currentOffset));
    
    loadOffers(0);
  </script>
</Layout>
