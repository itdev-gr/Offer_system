---
import Layout from '../../layouts/Layout.astro';
import { requireAdmin } from '../../lib/auth/middleware';

const admin = await requireAdmin(Astro.cookies);
---

<Layout title="Admin Dashboard">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="mb-6 flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
        <div class="space-x-4">
          <a
            href="/offers/new"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            New Offer
          </a>
          <a
            href="/logout"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Logout
          </a>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Users Stats -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Total Users</p>
              <p id="totalUsers" class="text-2xl font-bold text-gray-900">-</p>
            </div>
            <div class="p-3 bg-blue-100 rounded-full">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
          </div>
          <div class="mt-4 flex space-x-4 text-sm">
            <div>
              <span class="text-gray-500">Admins:</span>
              <span id="adminUsers" class="ml-1 font-semibold text-gray-900">-</span>
            </div>
            <div>
              <span class="text-gray-500">Users:</span>
              <span id="regularUsers" class="ml-1 font-semibold text-gray-900">-</span>
            </div>
          </div>
        </div>

        <!-- Offers Stats -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Total Offers</p>
              <p id="totalOffers" class="text-2xl font-bold text-gray-900">-</p>
            </div>
            <div class="p-3 bg-green-100 rounded-full">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
          </div>
          <div class="mt-4 text-sm">
            <span class="text-gray-500">Recent (6 months):</span>
            <span id="recentOffers" class="ml-1 font-semibold text-gray-900">-</span>
          </div>
        </div>

        <!-- Revenue Stats -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Total Revenue</p>
              <p id="totalRevenue" class="text-2xl font-bold text-gray-900">-</p>
            </div>
            <div class="p-3 bg-yellow-100 rounded-full">
              <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <p class="text-sm font-medium text-gray-600 mb-4">Quick Actions</p>
          <div class="space-y-2">
            <a
              href="/admin/users"
              class="block w-full px-4 py-2 text-sm text-center bg-indigo-600 text-white rounded-md hover:bg-indigo-700"
            >
              Manage Users
            </a>
            <a
              href="/admin/offers"
              class="block w-full px-4 py-2 text-sm text-center bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300"
            >
              View All Offers
            </a>
          </div>
        </div>
      </div>

      <!-- Recent Offers -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold text-gray-900">Recent Offers</h2>
          <a
            href="/admin/offers"
            class="text-sm text-indigo-600 hover:text-indigo-700"
          >
            View All →
          </a>
        </div>
        <div id="recentOffersList" class="space-y-3">
          <p class="text-gray-500 text-center py-4">Loading...</p>
        </div>
      </div>

      <!-- Offers by Month Chart -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Offers by Month (Last 6 Months)</h2>
        <div id="offersChart" class="h-64">
          <p class="text-gray-500 text-center py-4">Loading chart...</p>
        </div>
      </div>
    </div>
  </div>

  <script>
    async function loadStats() {
      try {
        const response = await fetch('/api/admin/stats');
        if (!response.ok) throw new Error('Failed to load stats');
        
        const data = await response.json();
        const stats = data.stats;
        
        // Update stats cards
        document.getElementById('totalUsers')!.textContent = stats.users.total.toString();
        document.getElementById('adminUsers')!.textContent = stats.users.admins.toString();
        document.getElementById('regularUsers')!.textContent = stats.users.regular.toString();
        document.getElementById('totalOffers')!.textContent = stats.offers.total.toString();
        document.getElementById('recentOffers')!.textContent = stats.offers.recent.toString();
        
        // Format revenue
        const revenue = new Intl.NumberFormat('en-US', {
          style: 'currency',
          currency: 'EUR',
        }).format(stats.revenue.total);
        document.getElementById('totalRevenue')!.textContent = revenue;
        
        // Render recent offers
        const recentList = document.getElementById('recentOffersList')!;
        if (stats.recentOffers.length === 0) {
          recentList.innerHTML = '<p class="text-gray-500 text-center py-4">No offers yet</p>';
        } else {
          recentList.innerHTML = stats.recentOffers.map((offer: any) => {
            const date = new Date(offer.createdAt).toLocaleDateString();
            const total = new Intl.NumberFormat('en-US', {
              style: 'currency',
              currency: 'EUR',
            }).format(offer.total);
            return `
              <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:bg-gray-50">
                <div class="flex-1">
                  <p class="font-medium text-gray-900">${offer.clientName}</p>
                  <p class="text-sm text-gray-500">${offer.createdBy?.email || 'Unknown'} • ${date}</p>
                </div>
                <div class="text-right">
                  <p class="font-semibold text-gray-900">${total}</p>
                  <a href="/offers/${offer.id}" class="text-sm text-indigo-600 hover:text-indigo-700">View →</a>
                </div>
              </div>
            `;
          }).join('');
        }
        
        // Render chart
        const chartContainer = document.getElementById('offersChart')!;
        const months = Object.keys(stats.offers.byMonth).sort();
        if (months.length === 0) {
          chartContainer.innerHTML = '<p class="text-gray-500 text-center py-4">No data available</p>';
        } else {
          const maxValue = Math.max(...Object.values(stats.offers.byMonth) as number[]);
          chartContainer.innerHTML = `
            <div class="flex items-end justify-between h-full space-x-2">
              ${months.map((month) => {
                const value = stats.offers.byMonth[month];
                const height = maxValue > 0 ? (value / maxValue) * 100 : 0;
                const monthLabel = new Date(month + '-01').toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
                return `
                  <div class="flex-1 flex flex-col items-center">
                    <div class="w-full bg-indigo-100 rounded-t" style="height: ${height}%">
                      <div class="bg-indigo-600 h-full rounded-t"></div>
                    </div>
                    <p class="text-xs text-gray-600 mt-2">${monthLabel}</p>
                    <p class="text-xs font-semibold text-gray-900 mt-1">${value}</p>
                  </div>
                `;
              }).join('')}
            </div>
          `;
        }
      } catch (error) {
        console.error('Error loading stats:', error);
        document.getElementById('recentOffersList')!.innerHTML = 
          '<p class="text-red-500 text-center py-4">Failed to load stats</p>';
      }
    }
    
    loadStats();
  </script>
</Layout>
