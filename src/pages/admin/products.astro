---
import Layout from '../../layouts/Layout.astro';
import { requireAdmin } from '../../lib/auth/middleware';

const admin = await requireAdmin(Astro.cookies);
---

<Layout title="Manage Products - Admin">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="mb-6 flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-900">Manage Products</h1>
        <div class="space-x-4">
          <a
            href="/admin"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Dashboard
          </a>
          <a
            href="/offers/new"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            New Offer
          </a>
          <a
            href="/profile"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Profile
          </a>
          <a
            href="/logout"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Logout
          </a>
        </div>
      </div>

      <!-- Add Category Section -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Add New Category</h2>
        <div class="flex gap-2">
          <input
            type="text"
            id="newCategoryName"
            placeholder="Category name (e.g., 'Web Development')"
            class="flex-1 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
          />
          <button
            id="addCategoryBtn"
            class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium"
          >
            Add Category
          </button>
        </div>
      </div>

      <!-- Bulk Add Sub-Products Section -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Bulk Actions</h2>
        <div class="space-y-4">
          <div>
            <p class="text-sm text-gray-600 mb-4">
              Add 5 common sub-products (Extra Pages, SEO Setup, Contact Form, Analytics Setup, SSL Certificate) to all products in website categories.
            </p>
            <button
              id="addSubProductsBtn"
              class="px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 font-medium"
            >
              Add 5 Sub-Products to All Website Products
            </button>
            <div id="addSubProductsResult" class="mt-4 hidden"></div>
          </div>
          <div class="border-t pt-4">
            <p class="text-sm text-gray-600 mb-4">
              Delete the last 100 sub-products that were created.
            </p>
            <button
              id="deleteSubProductsBtn"
              class="px-6 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 font-medium"
            >
              Delete Last 100 Sub-Products
            </button>
            <div id="deleteSubProductsResult" class="mt-4 hidden"></div>
          </div>
        </div>
      </div>

      <!-- Products by Category -->
      <div id="productsContainer" class="space-y-6">
        <p class="text-gray-500 text-center py-8">Loading products...</p>
      </div>
    </div>
  </div>

  <!-- Edit Product Modal -->
  <div id="editModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
      <div class="p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold text-gray-900" id="modalTitle">Edit Product</h3>
          <button
            id="closeModalBtn"
            class="text-gray-400 hover:text-gray-600"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <form id="editProductForm" class="space-y-4">
          <input type="hidden" id="editCategory" />
          <input type="hidden" id="editItemId" />
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Product ID</label>
            <input
              type="text"
              id="editProductId"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Label</label>
            <input
              type="text"
              id="editLabel"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <textarea
              id="editDescription"
              required
              rows="3"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            ></textarea>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Price (€)</label>
            <input
              type="number"
              id="editPrice"
              required
              min="0"
              step="0.01"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>
          <div class="flex gap-2 pt-4">
            <button
              type="submit"
              class="flex-1 px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium"
            >
              Save Changes
            </button>
            <button
              type="button"
              id="cancelEditBtn"
              class="px-6 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 font-medium"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Sub-Product Modal -->
  <div id="editSubProductModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
      <div class="p-6">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-xl font-bold text-gray-900" id="subProductModalTitle">Edit Sub-Product</h3>
          <button
            id="closeSubProductModalBtn"
            class="text-gray-400 hover:text-gray-600"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <form id="editSubProductForm" class="space-y-4">
          <input type="hidden" id="editSubProductCategory" />
          <input type="hidden" id="editSubProductItemId" />
          <input type="hidden" id="editSubProductId" />
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Sub-Product ID</label>
            <input
              type="text"
              id="editSubProductProductId"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Label</label>
            <input
              type="text"
              id="editSubProductLabel"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <textarea
              id="editSubProductDescription"
              required
              rows="3"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            ></textarea>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Price (€)</label>
            <input
              type="number"
              id="editSubProductPrice"
              required
              min="0"
              step="0.01"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
            />
          </div>
          <div class="flex gap-2 pt-4">
            <button
              type="submit"
              class="flex-1 px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 font-medium"
            >
              Save Changes
            </button>
            <button
              type="button"
              id="cancelSubProductEditBtn"
              class="px-6 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 font-medium"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    let catalog: Record<string, Array<{ id: string; label: string; description: string; price: number; subProducts?: Array<{ id: string; label: string; description: string; price: number }> }>> = {};
    let expandedRows: Set<string> = new Set();

    // Load catalog
    async function loadCatalog() {
      try {
        const response = await fetch('/api/catalog');
        if (!response.ok) throw new Error('Failed to load catalog');
        catalog = await response.json();
        renderCatalog();
      } catch (error) {
        console.error('Error loading catalog:', error);
        document.getElementById('productsContainer')!.innerHTML = 
          '<p class="text-red-500 text-center py-8">Failed to load products. Please refresh the page.</p>';
      }
    }

    // Render catalog
    function renderCatalog() {
      const container = document.getElementById('productsContainer')!;
      
      if (Object.keys(catalog).length === 0) {
        container.innerHTML = '<p class="text-gray-500 text-center py-8">No categories yet. Add a category to get started.</p>';
        return;
      }

      container.innerHTML = Object.entries(catalog).map(([category, items]) => `
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-bold text-gray-900">${escapeHtml(category)}</h2>
            <div class="flex gap-2">
              <button
                onclick="addProduct('${escapeHtml(category)}')"
                class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 text-sm font-medium"
              >
                + Add Product
              </button>
              <button
                onclick="deleteCategory('${escapeHtml(category)}')"
                class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 text-sm font-medium"
              >
                Delete Category
              </button>
            </div>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Label</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
                  <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Price</th>
                  <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                ${items.map(item => {
                  const rowKey = `${category}-${item.id}`;
                  const isExpanded = expandedRows.has(rowKey);
                  const hasSubProducts = item.subProducts && item.subProducts.length > 0;
                  return `
                  <tr class="bg-white">
                    <td class="px-4 py-3 text-sm text-gray-900">
                      ${hasSubProducts ? `
                        <button
                          onclick="toggleSubProducts('${rowKey}')"
                          class="flex items-center gap-1 text-indigo-600 hover:text-indigo-700"
                        >
                          <svg class="w-4 h-4 transition-transform ${isExpanded ? 'rotate-90' : ''}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                          </svg>
                          ${escapeHtml(item.id)}
                        </button>
                      ` : escapeHtml(item.id)}
                    </td>
                    <td class="px-4 py-3 text-sm font-medium text-gray-900">${escapeHtml(item.label)}</td>
                    <td class="px-4 py-3 text-sm text-gray-600">${escapeHtml(item.description)}</td>
                    <td class="px-4 py-3 text-sm text-gray-900 text-right">€${item.price.toFixed(2)}</td>
                    <td class="px-4 py-3 text-right">
                      <div class="flex justify-end gap-2">
                        <button
                          onclick="addSubProduct('${escapeHtml(category)}', '${escapeHtml(item.id)}')"
                          class="px-3 py-1 bg-green-600 text-white rounded text-xs hover:bg-green-700"
                          title="Add Sub-Product"
                        >
                          + Sub
                        </button>
                        <button
                          onclick="editProduct('${escapeHtml(category)}', '${escapeHtml(item.id)}')"
                          class="px-3 py-1 bg-indigo-600 text-white rounded text-xs hover:bg-indigo-700"
                        >
                          Edit
                        </button>
                        <button
                          onclick="deleteProduct('${escapeHtml(category)}', '${escapeHtml(item.id)}')"
                          class="px-3 py-1 bg-red-600 text-white rounded text-xs hover:bg-red-700"
                        >
                          Delete
                        </button>
                      </div>
                    </td>
                  </tr>
                  ${isExpanded && hasSubProducts ? `
                  <tr class="bg-gray-50">
                    <td colspan="5" class="px-4 py-4">
                      <div class="ml-8">
                        <h4 class="text-sm font-semibold text-gray-700 mb-2">Sub-Products:</h4>
                        <table class="min-w-full divide-y divide-gray-200">
                          <thead class="bg-gray-100">
                            <tr>
                              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
                              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Label</th>
                              <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
                              <th class="px-3 py-2 text-right text-xs font-medium text-gray-500 uppercase">Price</th>
                              <th class="px-3 py-2 text-right text-xs font-medium text-gray-500 uppercase">Actions</th>
                            </tr>
                          </thead>
                          <tbody class="bg-white divide-y divide-gray-200">
                            ${item.subProducts!.map(subProduct => `
                              <tr>
                                <td class="px-3 py-2 text-xs text-gray-900">${escapeHtml(subProduct.id)}</td>
                                <td class="px-3 py-2 text-xs font-medium text-gray-900">${escapeHtml(subProduct.label)}</td>
                                <td class="px-3 py-2 text-xs text-gray-600">${escapeHtml(subProduct.description)}</td>
                                <td class="px-3 py-2 text-xs text-gray-900 text-right">€${subProduct.price.toFixed(2)}</td>
                                <td class="px-3 py-2 text-right">
                                  <div class="flex justify-end gap-1">
                                    <button
                                      onclick="editSubProduct('${escapeHtml(category)}', '${escapeHtml(item.id)}', '${escapeHtml(subProduct.id)}')"
                                      class="px-2 py-1 bg-indigo-600 text-white rounded text-xs hover:bg-indigo-700"
                                    >
                                      Edit
                                    </button>
                                    <button
                                      onclick="deleteSubProduct('${escapeHtml(category)}', '${escapeHtml(item.id)}', '${escapeHtml(subProduct.id)}')"
                                      class="px-2 py-1 bg-red-600 text-white rounded text-xs hover:bg-red-700"
                                    >
                                      Delete
                                    </button>
                                  </div>
                                </td>
                              </tr>
                            `).join('')}
                          </tbody>
                        </table>
                      </div>
                    </td>
                  </tr>
                  ` : ''}
                `;
                }).join('')}
              </tbody>
            </table>
          </div>
        </div>
      `).join('');
    }

    // Add category
    async function addCategory() {
      const input = document.getElementById('newCategoryName') as HTMLInputElement;
      const categoryName = input.value.trim();
      
      if (!categoryName) {
        alert('Please enter a category name');
        return;
      }

      if (catalog[categoryName]) {
        alert('Category already exists');
        return;
      }

      try {
        catalog[categoryName] = [];
        const response = await fetch('/api/catalog', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(catalog),
        });

        if (!response.ok) throw new Error('Failed to add category');
        
        input.value = '';
        await loadCatalog();
      } catch (error) {
        console.error('Error adding category:', error);
        alert('Failed to add category');
        delete catalog[categoryName];
      }
    }

    // Add product
    async function addProduct(category: string) {
      const itemId = prompt('Enter product ID:');
      if (!itemId) return;

      const label = prompt('Enter product label:');
      if (!label) return;

      const description = prompt('Enter product description:');
      if (!description) return;

      const priceStr = prompt('Enter price (€):');
      if (!priceStr) return;
      const price = parseFloat(priceStr);
      if (isNaN(price) || price < 0) {
        alert('Invalid price');
        return;
      }

      try {
        const response = await fetch('/api/catalog', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            category,
            item: { id: itemId, label, description, price },
          }),
        });

        if (!response.ok) throw new Error('Failed to add product');
        
        await loadCatalog();
      } catch (error) {
        console.error('Error adding product:', error);
        alert('Failed to add product');
      }
    }

    // Edit product
    function editProduct(category: string, itemId: string) {
      const item = catalog[category]?.find(i => i.id === itemId);
      if (!item) return;

      (document.getElementById('editCategory') as HTMLInputElement).value = category;
      (document.getElementById('editItemId') as HTMLInputElement).value = itemId;
      (document.getElementById('editProductId') as HTMLInputElement).value = item.id;
      (document.getElementById('editLabel') as HTMLInputElement).value = item.label;
      (document.getElementById('editDescription') as HTMLTextAreaElement).value = item.description;
      (document.getElementById('editPrice') as HTMLInputElement).value = item.price.toString();
      (document.getElementById('modalTitle') as HTMLElement).textContent = 'Edit Product';
      
      document.getElementById('editModal')!.classList.remove('hidden');
    }

    // Delete product
    async function deleteProduct(category: string, itemId: string) {
      if (!confirm(`Are you sure you want to delete this product?`)) return;

      try {
        const response = await fetch(`/api/catalog?category=${encodeURIComponent(category)}&itemId=${encodeURIComponent(itemId)}`, {
          method: 'DELETE',
        });

        if (!response.ok) throw new Error('Failed to delete product');
        
        await loadCatalog();
      } catch (error) {
        console.error('Error deleting product:', error);
        alert('Failed to delete product');
      }
    }

    // Delete category
    async function deleteCategory(category: string) {
      if (!confirm(`Are you sure you want to delete the category "${category}" and all its products?`)) return;

      try {
        const response = await fetch(`/api/catalog?category=${encodeURIComponent(category)}`, {
          method: 'DELETE',
        });

        if (!response.ok) throw new Error('Failed to delete category');
        
        await loadCatalog();
      } catch (error) {
        console.error('Error deleting category:', error);
        alert('Failed to delete category');
      }
    }

    // Save edited product
    async function saveProduct(event: Event) {
      event.preventDefault();
      
      const category = (document.getElementById('editCategory') as HTMLInputElement).value;
      const oldItemId = (document.getElementById('editItemId') as HTMLInputElement).value;
      const newItemId = (document.getElementById('editProductId') as HTMLInputElement).value;
      const label = (document.getElementById('editLabel') as HTMLInputElement).value;
      const description = (document.getElementById('editDescription') as HTMLTextAreaElement).value;
      const price = parseFloat((document.getElementById('editPrice') as HTMLInputElement).value);

      if (!category || !newItemId || !label || !description || isNaN(price) || price < 0) {
        alert('Please fill in all fields correctly');
        return;
      }

      try {
        // If ID changed, delete old and add new
        if (oldItemId !== newItemId) {
          await fetch(`/api/catalog?category=${encodeURIComponent(category)}&itemId=${encodeURIComponent(oldItemId)}`, {
            method: 'DELETE',
          });
        }

        const response = await fetch('/api/catalog', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            category,
            item: { id: newItemId, label, description, price },
          }),
        });

        if (!response.ok) throw new Error('Failed to save product');
        
        document.getElementById('editModal')!.classList.add('hidden');
        await loadCatalog();
      } catch (error) {
        console.error('Error saving product:', error);
        alert('Failed to save product');
      }
    }

    // Close modal
    function closeModal() {
      document.getElementById('editModal')!.classList.add('hidden');
    }

    // Escape HTML
    function escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Add sub-products to all website products
    async function addSubProductsToAll() {
      const btn = document.getElementById('addSubProductsBtn') as HTMLButtonElement;
      const resultDiv = document.getElementById('addSubProductsResult') as HTMLDivElement;
      
      if (!confirm('This will add 5 sub-products to all products in website categories. Continue?')) {
        return;
      }

      btn.disabled = true;
      btn.textContent = 'Adding sub-products...';
      resultDiv.classList.add('hidden');
      resultDiv.innerHTML = '';

      try {
        const response = await fetch('/api/add-subproducts', {
          method: 'POST',
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.error || 'Failed to add sub-products');
        }

        const data = await response.json();
        resultDiv.classList.remove('hidden');
        resultDiv.className = 'mt-4 p-4 bg-green-50 border border-green-200 rounded-md';
        resultDiv.innerHTML = `
          <p class="text-green-800 font-semibold">✓ Successfully added ${data.totalAdded} sub-products!</p>
          <details class="mt-2">
            <summary class="text-sm text-green-700 cursor-pointer">View details</summary>
            <ul class="mt-2 text-xs text-green-600 list-disc list-inside max-h-40 overflow-y-auto">
              ${data.results.map((r: string) => `<li>${escapeHtml(r)}</li>`).join('')}
            </ul>
          </details>
        `;
        
        await loadCatalog();
      } catch (error: any) {
        resultDiv.classList.remove('hidden');
        resultDiv.className = 'mt-4 p-4 bg-red-50 border border-red-200 rounded-md';
        resultDiv.innerHTML = `<p class="text-red-800">Error: ${escapeHtml(error.message || 'Failed to add sub-products')}</p>`;
      } finally {
        btn.disabled = false;
        btn.textContent = 'Add 5 Sub-Products to All Website Products';
      }
    }

    // Delete last N sub-products
    async function deleteLastSubProducts() {
      const btn = document.getElementById('deleteSubProductsBtn') as HTMLButtonElement;
      const resultDiv = document.getElementById('deleteSubProductsResult') as HTMLDivElement;
      
      if (!confirm('This will delete the last 100 sub-products. This action cannot be undone. Continue?')) {
        return;
      }

      btn.disabled = true;
      btn.textContent = 'Deleting sub-products...';
      resultDiv.classList.add('hidden');
      resultDiv.innerHTML = '';

      try {
        const response = await fetch('/api/delete-subproducts', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ count: 100 }),
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.error || 'Failed to delete sub-products');
        }

        const data = await response.json();
        resultDiv.classList.remove('hidden');
        resultDiv.className = 'mt-4 p-4 bg-green-50 border border-green-200 rounded-md';
        resultDiv.innerHTML = `
          <p class="text-green-800 font-semibold">✓ Successfully deleted ${data.totalDeleted} sub-products!</p>
          <p class="text-sm text-green-700 mt-1">Requested: ${data.requested}, Deleted: ${data.totalDeleted}</p>
          ${data.results && data.results.length > 0 ? `
          <details class="mt-2">
            <summary class="text-sm text-green-700 cursor-pointer">View details (showing first 50)</summary>
            <ul class="mt-2 text-xs text-green-600 list-disc list-inside max-h-40 overflow-y-auto">
              ${data.results.map((r: string) => `<li>${escapeHtml(r)}</li>`).join('')}
            </ul>
          </details>
          ` : ''}
        `;
        
        await loadCatalog();
      } catch (error: any) {
        resultDiv.classList.remove('hidden');
        resultDiv.className = 'mt-4 p-4 bg-red-50 border border-red-200 rounded-md';
        resultDiv.innerHTML = `<p class="text-red-800">Error: ${escapeHtml(error.message || 'Failed to delete sub-products')}</p>`;
      } finally {
        btn.disabled = false;
        btn.textContent = 'Delete Last 100 Sub-Products';
      }
    }

    // Event listeners
    document.getElementById('addCategoryBtn')!.addEventListener('click', addCategory);
    document.getElementById('addSubProductsBtn')!.addEventListener('click', addSubProductsToAll);
    document.getElementById('deleteSubProductsBtn')!.addEventListener('click', deleteLastSubProducts);
    document.getElementById('editProductForm')!.addEventListener('submit', saveProduct);
    document.getElementById('closeModalBtn')!.addEventListener('click', closeModal);
    document.getElementById('cancelEditBtn')!.addEventListener('click', closeModal);

    // Toggle sub-products visibility
    function toggleSubProducts(rowKey: string) {
      if (expandedRows.has(rowKey)) {
        expandedRows.delete(rowKey);
      } else {
        expandedRows.add(rowKey);
      }
      renderCatalog();
    }

    // Add sub-product
    function addSubProduct(category: string, itemId: string) {
      (document.getElementById('editSubProductCategory') as HTMLInputElement).value = category;
      (document.getElementById('editSubProductItemId') as HTMLInputElement).value = itemId;
      (document.getElementById('editSubProductId') as HTMLInputElement).value = '';
      (document.getElementById('editSubProductProductId') as HTMLInputElement).value = '';
      (document.getElementById('editSubProductLabel') as HTMLInputElement).value = '';
      (document.getElementById('editSubProductDescription') as HTMLTextAreaElement).value = '';
      (document.getElementById('editSubProductPrice') as HTMLInputElement).value = '';
      (document.getElementById('subProductModalTitle') as HTMLElement).textContent = 'Add Sub-Product';
      
      document.getElementById('editSubProductModal')!.classList.remove('hidden');
    }

    // Edit sub-product
    function editSubProduct(category: string, itemId: string, subProductId: string) {
      const item = catalog[category]?.find(i => i.id === itemId);
      if (!item || !item.subProducts) return;
      
      const subProduct = item.subProducts.find(sp => sp.id === subProductId);
      if (!subProduct) return;

      (document.getElementById('editSubProductCategory') as HTMLInputElement).value = category;
      (document.getElementById('editSubProductItemId') as HTMLInputElement).value = itemId;
      (document.getElementById('editSubProductId') as HTMLInputElement).value = subProduct.id;
      (document.getElementById('editSubProductProductId') as HTMLInputElement).value = subProduct.id;
      (document.getElementById('editSubProductLabel') as HTMLInputElement).value = subProduct.label;
      (document.getElementById('editSubProductDescription') as HTMLTextAreaElement).value = subProduct.description;
      (document.getElementById('editSubProductPrice') as HTMLInputElement).value = subProduct.price.toString();
      (document.getElementById('subProductModalTitle') as HTMLElement).textContent = 'Edit Sub-Product';
      
      document.getElementById('editSubProductModal')!.classList.remove('hidden');
    }

    // Delete sub-product
    async function deleteSubProduct(category: string, itemId: string, subProductId: string) {
      if (!confirm('Are you sure you want to delete this sub-product?')) return;

      try {
        const response = await fetch(`/api/catalog?category=${encodeURIComponent(category)}&itemId=${encodeURIComponent(itemId)}&subProductId=${encodeURIComponent(subProductId)}&action=delete`, {
          method: 'PATCH',
        });

        if (!response.ok) throw new Error('Failed to delete sub-product');
        
        await loadCatalog();
      } catch (error) {
        console.error('Error deleting sub-product:', error);
        alert('Failed to delete sub-product');
      }
    }

    // Save sub-product
    async function saveSubProduct(event: Event) {
      event.preventDefault();
      
      const category = (document.getElementById('editSubProductCategory') as HTMLInputElement).value;
      const itemId = (document.getElementById('editSubProductItemId') as HTMLInputElement).value;
      const oldSubProductId = (document.getElementById('editSubProductId') as HTMLInputElement).value;
      const newSubProductId = (document.getElementById('editSubProductProductId') as HTMLInputElement).value;
      const label = (document.getElementById('editSubProductLabel') as HTMLInputElement).value;
      const description = (document.getElementById('editSubProductDescription') as HTMLTextAreaElement).value;
      const price = parseFloat((document.getElementById('editSubProductPrice') as HTMLInputElement).value);

      if (!category || !itemId || !newSubProductId || !label || !description || isNaN(price) || price < 0) {
        alert('Please fill in all fields correctly');
        return;
      }

      try {
        const action = oldSubProductId && oldSubProductId !== newSubProductId ? 'update' : 'add';
        
        // If ID changed, delete old and add new
        if (oldSubProductId && oldSubProductId !== newSubProductId) {
          await fetch(`/api/catalog?category=${encodeURIComponent(category)}&itemId=${encodeURIComponent(itemId)}&subProductId=${encodeURIComponent(oldSubProductId)}&action=delete`, {
            method: 'PATCH',
          });
        }

        const response = await fetch(`/api/catalog?category=${encodeURIComponent(category)}&itemId=${encodeURIComponent(itemId)}&action=${action}`, {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            subProduct: { id: newSubProductId, label, description, price },
          }),
        });

        if (!response.ok) throw new Error('Failed to save sub-product');
        
        document.getElementById('editSubProductModal')!.classList.add('hidden');
        await loadCatalog();
      } catch (error) {
        console.error('Error saving sub-product:', error);
        alert('Failed to save sub-product');
      }
    }

    // Close sub-product modal
    function closeSubProductModal() {
      document.getElementById('editSubProductModal')!.classList.add('hidden');
    }

    // Make functions global for onclick handlers
    (window as any).addProduct = addProduct;
    (window as any).editProduct = editProduct;
    (window as any).deleteProduct = deleteProduct;
    (window as any).deleteCategory = deleteCategory;
    (window as any).toggleSubProducts = toggleSubProducts;
    (window as any).addSubProduct = addSubProduct;
    (window as any).editSubProduct = editSubProduct;
    (window as any).deleteSubProduct = deleteSubProduct;

    // Event listeners
    document.getElementById('editSubProductForm')!.addEventListener('submit', saveSubProduct);
    document.getElementById('closeSubProductModalBtn')!.addEventListener('click', closeSubProductModal);
    document.getElementById('cancelSubProductEditBtn')!.addEventListener('click', closeSubProductModal);

    // Load catalog on page load
    loadCatalog();
  </script>
</Layout>
