---
import Layout from '../../layouts/Layout.astro';
import { requireAdmin } from '../../lib/auth/middleware';

const admin = await requireAdmin(Astro.cookies);
---

<Layout title="User Management">
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="mb-6 flex justify-between items-center">
        <h1 class="text-3xl font-bold text-gray-900">User Management</h1>
        <div class="space-x-4">
          <a
            href="/admin"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Dashboard
          </a>
          <a
            href="/offers/new"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            New Offer
          </a>
          <a
            href="/logout"
            class="text-sm text-gray-600 hover:text-gray-900"
          >
            Logout
          </a>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="mb-4 flex justify-between items-center">
          <h2 class="text-xl font-bold text-gray-900">All Users</h2>
          <button
            id="refreshUsers"
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200"
          >
            Refresh
          </button>
        </div>

        <div id="usersList" class="space-y-3">
          <p class="text-gray-500 text-center py-4">Loading users...</p>
        </div>
      </div>
    </div>
  </div>

  <script>
    async function loadUsers() {
      try {
        const response = await fetch('/api/users');
        if (!response.ok) throw new Error('Failed to load users');
        
        const data = await response.json();
        const users = data.users;
        
        const usersList = document.getElementById('usersList')!;
        if (users.length === 0) {
          usersList.innerHTML = '<p class="text-gray-500 text-center py-4">No users found</p>';
          return;
        }
        
        usersList.innerHTML = users.map((user: any) => {
          const createdAt = user.createdAt?.toDate?.() 
            ? new Date(user.createdAt.toDate()).toLocaleDateString()
            : user.createdAt 
            ? new Date(user.createdAt).toLocaleDateString()
            : 'Unknown';
          
          const roleBadge = user.role === 'admin' 
            ? '<span class="px-2 py-1 text-xs font-semibold bg-red-100 text-red-800 rounded-full">Admin</span>'
            : '<span class="px-2 py-1 text-xs font-semibold bg-blue-100 text-blue-800 rounded-full">User</span>';
          
          const fullName = `${user.name || 'New'} ${user.surname || 'User'}`;
          
          return `
            <div class="p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
              <div class="flex items-start justify-between mb-3">
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <p class="font-medium text-gray-900">${fullName}</p>
                    ${roleBadge}
                  </div>
                  <p class="text-sm text-gray-600">${user.email || 'No email'}</p>
                  <p class="text-xs text-gray-400 mt-1">UID: ${user.uid}</p>
                  <p class="text-xs text-gray-400">Created: ${createdAt}</p>
                </div>
                <div class="flex items-center space-x-2">
                  <select
                    id="role-${user.uid}"
                    class="px-3 py-2 text-sm border border-gray-300 rounded-md bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    onchange="updateUserRole('${user.uid}', this.value)"
                  >
                    <option value="user" ${user.role === 'user' ? 'selected' : ''}>User</option>
                    <option value="admin" ${user.role === 'admin' ? 'selected' : ''}>Admin</option>
                  </select>
                </div>
              </div>
              <div class="grid grid-cols-2 gap-3 mt-3 pt-3 border-t border-gray-200">
                <div>
                  <label class="block text-xs font-medium text-gray-700 mb-1">Name</label>
                  <input
                    type="text"
                    id="name-${user.uid}"
                    value="${user.name || 'New'}"
                    class="w-full px-2 py-1 text-sm border border-gray-300 rounded-md bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    onblur="updateUserName('${user.uid}', 'name', this.value)"
                  />
                </div>
                <div>
                  <label class="block text-xs font-medium text-gray-700 mb-1">Surname</label>
                  <input
                    type="text"
                    id="surname-${user.uid}"
                    value="${user.surname || 'User'}"
                    class="w-full px-2 py-1 text-sm border border-gray-300 rounded-md bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    onblur="updateUserName('${user.uid}', 'surname', this.value)"
                  />
                </div>
              </div>
            </div>
          `;
        }).join('');
      } catch (error) {
        console.error('Error loading users:', error);
        document.getElementById('usersList')!.innerHTML = 
          '<p class="text-red-500 text-center py-4">Failed to load users</p>';
      }
    }
    
    async function updateUserRole(uid: string, role: string) {
      try {
        const response = await fetch('/api/users', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ uid, role }),
        });
        
        if (!response.ok) {
          const data = await response.json();
          throw new Error(data.error || 'Failed to update role');
        }
        
        // Show success message
        const select = document.getElementById(`role-${uid}`) as HTMLSelectElement;
        const originalValue = select.dataset.originalValue || '';
        select.dataset.originalValue = role;
        
        // Reload users to reflect changes
        loadUsers();
      } catch (error: any) {
        alert('Failed to update role: ' + error.message);
        // Reset select
        const select = document.getElementById(`role-${uid}`) as HTMLSelectElement;
        select.value = select.dataset.originalValue || 'user';
      }
    }
    
    async function updateUserName(uid: string, field: 'name' | 'surname', value: string) {
      try {
        const updateData: any = { uid };
        updateData[field] = value;
        
        const response = await fetch('/api/users', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(updateData),
        });
        
        if (!response.ok) {
          const data = await response.json();
          throw new Error(data.error || `Failed to update ${field}`);
        }
        
        // Reload users to reflect changes
        loadUsers();
      } catch (error: any) {
        alert(`Failed to update ${field}: ` + error.message);
        // Reload to reset
        loadUsers();
      }
    }
    
    // Make functions available globally
    (window as any).updateUserRole = updateUserRole;
    (window as any).updateUserName = updateUserName;
    
    document.getElementById('refreshUsers')?.addEventListener('click', loadUsers);
    
    loadUsers();
  </script>
</Layout>
